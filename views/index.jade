extends layout

block body
    - if (locals.demo)
        div.notice-bar this is a demo board. to make a private board, go to <a href="/demo">/demo</a>

    //div.config
    //	i.fa.fa-cog.fa-lg.faded-icon

    div.main-tool-bar
        div.buttons
            select(id="card-color", name="card-color", title="Choose the post-it type (color)")
                each value in [['random', 'Random'], ['yellow', 'Story'], ['green', 'Middleware'], ['blue', 'Task'], ['white', 'White']]
                    option(value="#{value[0]}") #{value[1]}
            i(title="Create new post-it")#create-card.fa.fa-plus-circle.fa-2x.bottom-icon
            i(title="Toggle large/small view")#smallify.fa.fa-search-minus.fa-2x.bottom-icon
            i(title="Show advanced buttons")#show-extra-buttons.fa.fa-ellipsis-h.fa-2x.bottom-icon
            span.fa.extra-buttons
                i(title="Create new default kanban board")#create-board.fa.fa-table.fa-2x.bottom-icon
                i(title="Import board from JSON file")#import-json.fa.fa-cloud-upload.fa-2x.bottom-icon
                span.import-form
                    label(for="import-input") JSON file to import
                    input(type="file")#import-input
                    button(title="Import selected file to load existing board")#import-file Import
                    button(title="Cancel importing, and hide fields related to import feature")#cancel-import-file Cancel

                i(title="Export current board to JSON file")#export-json.fa.fa-cloud-download.fa-2x.bottom-icon
                div(title="Export current board to text file")#export-txt.fa.export
                    i.fa.fa-cloud-download.fa-2x.bottom-icon
                    i.export-type txt
                div(title="Export current board to CSV file")#export-csv.fa.export
                    i.fa.fa-cloud-download.fa-2x.bottom-icon
                    i.export-type csv
                i(title="Create new revision of current board")#create-revision.fa.fa-camera-retro.fa-2x.bottom-icon

        div.stickers
            div.sticker.user#sticker-user1
            div.sticker.user#sticker-user2
            each color in ['red', 'blue', 'yellow', 'green', 'pink', 'lightblue', 'orange', 'purple']
                div(id="sticker-#{color}").sticker
            //div.sticker#sticker-silverstar
            //div#addsticker
            div.sticker#nosticker
            //br
            //div.sticker#sticker-gold
            //	image(src="/images/stickers/sticker-gold.png")
            //div.sticker#sticker-bluestar
            //	image(src="/images/stickers/sticker-bluestar.png")
            //div.sticker#sticker-silverstar
            //	image(src="/images/stickers/sticker-silverstar.png")
            //div.sticker#sticker-redstar
            //	image(src="/images/stickers/sticker-redstar.png")
        div.clear

    div.main
        div#customizing-css-container
            h3 Customizing CSS
            button(title="Update specified CSS rules in the board below")#update-css Apply
            br
            textarea#extra-css
                | /* not satisfied with scrumblr ? add some CSS rules here */
        div.board-outline
            div#board
                div#board-doodles

                table#board-table.board-table
                    tr
                        td#icon-col(width='1%')
                            image#add-col.col-icon(width='20', height='20', src='images/icons/iconic/raster/black/plus_alt_32x32.png')
                            image#delete-col.col-icon(width='20', height='20', src='images/icons/iconic/raster/black/minus_alt_32x32.png')




    div.names
        p connected:
        //image#user-icon(src="/images/icons/cc/black/png/user_icon&16.png")
        input#yourname-input
        span.you-text (you)
        ul#names-ul

    div.revisions
        h3 Revisions
        div
            ul#revisions-list


